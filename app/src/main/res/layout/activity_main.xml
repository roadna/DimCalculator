<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="6"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/suffix_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="5"
        android:layout_columnSpan="4"
        android:layout_marginRight="12dp"
        android:hint="后缀式"
        android:textSize="12sp"
        android:gravity="center|end"/>

    <TextView
        android:id="@+id/expression_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="8"
        android:layout_columnSpan="4"
        android:layout_marginRight="12dp"
        android:hint="算术式"
        android:textSize="36sp"
        android:gravity="center|end"/>

    <TextView
        android:id="@+id/result_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="5"
        android:layout_columnSpan="4"
        android:layout_marginRight="12dp"
        android:hint="运算结果"
        android:textSize="18sp"
        android:gravity="center|end"/>


    <Button
        android:id="@+id/left_bracket"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="("
        android:onClick="add_left_bracket"/>

    <Button
        android:id="@+id/right_bracket"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text=")"
        android:onClick="add_right_bracket"/>

    <Button
        android:id="@+id/delete"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="del"
        android:onClick="delete_string"/>

    <Button
        android:id="@+id/clear"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="clear"
        android:onClick="clear_string"/>

    <Button
        android:id="@+id/seven"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="7"
        android:onClick="add_seven"/>

    <Button
        android:id="@+id/eight"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="8"
        android:onClick="add_eight"/>

    <Button
        android:id="@+id/nine"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="9"
        android:onClick="add_nine"/>

    <Button
        android:id="@+id/divide"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="/"
        android:onClick="add_divide"/>

    <Button
        android:id="@+id/four"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="4"
        android:onClick="add_four"/>

    <Button
        android:id="@+id/five"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="5"
        android:onClick="add_five"/>

    <Button
        android:id="@+id/six"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="6"
        android:onClick="add_six"/>

    <Button
        android:id="@+id/multiply"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="*"
        android:onClick="add_multiply"/>

    <Button
        android:id="@+id/one"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="1"
        android:onClick="add_one"/>

    <Button
        android:id="@+id/two"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="2"
        android:onClick="add_two"/>

    <Button
        android:id="@+id/three"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="3"
        android:onClick="add_three"/>

    <Button
        android:id="@+id/minus"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="-"
        android:onClick="add_minus"/>

    <Button
        android:id="@+id/dot"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="."
        android:onClick="add_dot"/>

    <Button
        android:id="@+id/zero"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="0"
        android:onClick="add_zero"/>

    <Button
        android:id="@+id/equal"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="="
        android:onClick="cal_result"/>

    <Button
        android:id="@+id/plus"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="+"
        android:onClick="add_plus"/>

</GridLayout>